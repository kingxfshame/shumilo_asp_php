                    <li><input type="checkbox" id="checkbox_@i" value="@ViewBag.Letters[i]" @ViewBag.Checkbox[i] name="checkbox_check">
                <label for="checkbox_@i">@ViewBag.Letters[i]</label>
                </li>
                }
            </ul>
        </div>
    </form>





    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">
                    Name in native language
                </th>
                <th scope="col">Name in a foreign language</th>
                <th scope="col">Sex</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in ViewBag.names)
            {
                if (x.status == "accept")
                {
                    <tr>
                        <td>@x.eestoni_nimi</td>
                        <td>@x.english_nimi</td>
                        <td>@x.sex</td>
                    </tr>
                }
            }
        </tbody>
    </table>

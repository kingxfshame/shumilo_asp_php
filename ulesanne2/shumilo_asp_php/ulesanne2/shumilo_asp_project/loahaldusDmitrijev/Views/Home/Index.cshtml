        </div>
        <div class="container">


            <ul class="ks-cboxtags">
                @for (int i = 0; i < ViewBag.Letters_Count; i++)
                {
                    @*<div class="custom-control custom-checkbox form-group col-md" style="margin-top:3.5vh">

<div class="container">
    <form id="search">
        <div class="form-group">
            <label for="exampleInputEmail1">Enter Name in native language</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter name">
            <small id="emailHelp" class="form-text text-muted">
                Search only works by first name
            </small>

        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">
                    Name in native language
                </th>
                <th scope="col">Name in a foreign language</th>
                <th scope="col">Sex</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in ViewBag.names)
            {
                if (x.status == "accept")
                {
                    <tr>
                        <td>@x.eestoni_nimi</td>
                        <td>@x.english_nimi</td>
                        <td>@x.sex</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
